{
    "name": "tonning/linear",
    "description": "Linear API SDK",
    "keywords": [
        "tonning",
        "linear",
        "api",
        "sdk"
    ],
    "homepage": "https://github.com/tonning/linear-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Kristoffer Tonning",
            "email": "tonning@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "sammyjo20/saloon": "^2.0",
        "sammyjo20/saloon-laravel": "^2.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Tonning\\Linear\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tonning\\Linear\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
